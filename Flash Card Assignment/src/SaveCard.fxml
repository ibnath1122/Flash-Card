         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Button>
      <Button fx:id="DoneBtn" layoutX="193.0" layoutY="315.0" mnemonicParsing="false" onAction="#DoneAction" prefHeight="43.0" prefWidth="75.0" style="-fx-background-color: #bf2980;" text="Done" textFill="#f8f8f8">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
