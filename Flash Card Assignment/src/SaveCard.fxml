<AnchorPane id="AnchorPane" prefHeight="398.0" prefWidth="625.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SaveCardController">
   <children>
      <ImageView fitHeight="405.0" fitWidth="626.0" layoutY="-7.0" pickOnBounds="true">
         <image>
            <Image url="@images.png" />
         </image>
      </ImageView>
      <TextField fx:id="QuesText" layoutX="193.0" layoutY="46.0" onAction="#QuesAction" prefHeight="119.0" prefWidth="378.0">
         <font>
            <Font name="Arial Bold" size="22.0" />
         </font></TextField>
      <TextField fx:id="AnsText" layoutX="193.0" layoutY="179.0" onAction="#AnsAction" prefHeight="74.0" prefWidth="378.0">
         <font>
            <Font name="Arial Bold" size="20.0" />
         </font></TextField>
      <Label layoutX="36.0" layoutY="60.0" prefHeight="74.0" prefWidth="119.0" text="Question">
         <font>
            <Font name="Bodoni MT Bold" size="32.0" />
         </font>
         <textFill>
            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop color="#ae226d" />
                  <Stop color="#7d6fda" offset="1.0" />
               </stops>
            </LinearGradient>
         </textFill>
      </Label>
      <Label layoutX="36.0" layoutY="179.0" prefHeight="74.0" prefWidth="104.0" text="Answer">
         <font>
            <Font name="Bodoni MT Bold" size="33.0" />
         </font>
